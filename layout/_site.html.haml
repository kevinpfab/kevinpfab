!!! 5
%html{:lang => 'en', :class => 'no-js'}
  %head
    %title= "#{@page} - Kevin Pfab"
    = render 'layout/_stylesheets.html.haml'
    = render 'layout/_head_javascript.html.haml'
  %body
    .container
      %div{:class => "row logo_div"}
        %div{:class => "span16"}
          %h2{:class => "logo"}
            :markdown
              **kevin**pfab
      .row
        %div{:class => "span2"} 
          %ul{:class => "nav"}
            - @nav.each do |item|
              %li
                - if item[:name] == @page
                  %a{:href => "#{item[:url]}", :class => "nav_selected"}
                    = "#{item[:name]} //"
                - elsif item[:url].nil?
                  .nav_header
                    = item[:name]
                - else
                  %a{:href => "#{item[:url]}"}
                    = item[:name]
        %div{:class => "span12 offset2 content"}
          = yield
      .row
        %div{:class => "span12 offset4"}
          .footer
            Copyright Kevin Pfab, 2011. Contact me at <a href="mailto:kevin.pfab@gmail.com">kevin.pfab@gmail.com</a>.

    /[if lt IE 7]
      %script{:src => "//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"}
      :javascript
        window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})
